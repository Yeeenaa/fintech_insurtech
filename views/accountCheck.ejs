            var element = data.res_list[i];
            $("#transactionList").append(
              "<tr><td>" +
                (i + 1) +
                "</td><td>" +
                element.inout_type +
                "</td><td>" +
                element.print_content +
                "</td><td>" +
                element.tran_amt +
                "원</td></tr></table>"
            );
          }
        },
      });
