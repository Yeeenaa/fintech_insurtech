        <!-- Third party plugin JS-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
        <!-- Contact form JS-->
        <script src="assets/mail/jqBootstrapValidation.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>

        <script>
          function send() {
            var user_id = sessionStorage.getItem('id');
            var ins1Res = document.getElementById("ins1").checked;
            var ins2Res = document.getElementById("ins2").checked;
            var ins3Res = document.getElementById("ins3").checked;
            var ins4Res = document.getElementById("ins4").checked;
            var ins5Res = document.getElementById("ins5").checked;
            var ins6Res = document.getElementById("ins6").checked;

            if(ins1Res)
                var ins1 = 1;
            else
                var ins1 = 0;

            if(ins2Res)
                var ins2 = 1;
            else
                var ins2 = 0;
            
            if(ins3Res)
                var ins3 = 1;
            else
                var ins3 = 0;

            if(ins4Res)
                var ins4 = 1;
            else
                var ins4 = 0;
            
            if(ins5Res)
                var ins5 = 1;
            else
                var ins5 = 0;

            if(ins6Res)
                var ins6 = 1;
            else
                var ins6 = 0;
            
            $.ajax({
            url:'/result',
            type : 'POST',
            data : {
                    userId: user_id,
                    ins1: ins1,
                    ins2: ins2,
                    ins3: ins3,
                    ins4: ins4,
                    ins5: ins5,
                    ins6: ins6
            },
            success:function(responseData){
              if(responseData == "1"){
               window.location.href = "/result";
              }
            }
         })
          }
      </script>
